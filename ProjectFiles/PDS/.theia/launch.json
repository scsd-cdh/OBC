{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "CCS Emulator Debug",
        "type": "ccs-debug",
        "request": "launch",
        "program": "${workspaceFolder}/PDS.out",  // Path to the output file
        "project": "PDS",  // Project name
        "device": "MSP430FR5969",  // Device you're targeting
        "ccxml": "${workspaceFolder}/MSP430FR5969_Emulator.ccxml",  // Path to the ccxml file configured for emulator
        "debugServerArgs": "",  // Optional: Debug server arguments
        "runToMain": true,  // Stops execution at main()
        "cpu": "CORTEX_M3",  // Optional: Specify CPU if needed (depends on device)
        "stopOnEntry": false  // Set to true if you want to stop at entry point before main()
      }
    ]
  }
  